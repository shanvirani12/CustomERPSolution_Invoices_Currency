@model CustomERPSolution_Invoices_Currency.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h4>Order</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h5>Client: @Model.Client.Name</h5>
        <h5>Date: @Model.Date.ToShortDateString()</h5>
